# Anthropic API key for LLM-based analysis
ANTHROPIC_API_KEY=sk-ant-...

# Masumi Payment Service
PAYMENT_SERVICE_URL=http://localhost:3001/api/v1
PAYMENT_API_KEY=
SELLER_VKEY=
AGENT_IDENTIFIER=
NETWORK=Preprod

# Server config
HOST=0.0.0.0
PORT=8011

# Kodosumi hybrid worker routing (optional)
KODOSUMI_ENABLED=false
KODOSUMI_INTERNAL_URL=http://localhost:8021
KODOSUMI_INTERNAL_TOKEN=change-me
KODOSUMI_REQUEST_TIMEOUT_SECONDS=90
KODOSUMI_CANARY_HEADER_NAME=x-kodosumi-canary
KODOSUMI_FALLBACK_ON_ERROR=true
KODOSUMI_LAUNCH_TIMEOUT_SECONDS=20
KODOSUMI_RAY_NUM_CPUS=1
KODOSUMI_RAY_OBJECT_STORE_MEMORY=78643200

# Auto-scan config (optional)
# Path to Aikido executable (default: aikido)
AIKIDO_BIN=aikido
# Scan timeout in seconds
AIKIDO_TIMEOUT_SECONDS=600
# Git clone timeout for repo_url mode
AIKIDO_GIT_CLONE_TIMEOUT_SECONDS=180
# Comma-separated allowlist for repo_url hostnames
ALLOWED_REPO_HOSTS=github.com,gitlab.com,bitbucket.org
